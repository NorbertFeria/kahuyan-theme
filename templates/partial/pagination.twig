{% if posts.pagination.pages is not empty %}
    <nav class="pagination-block">
        <ul class="pagination">

            {# First #}
            {% if posts.pagination.pages|first and posts.pagination.pages|first.current != true %}
                <li class="page-item first btn">
                    <a class="page-link" href="{{ posts.pagination.pages|first.link }}">First</a>
                </li>
            {% else %}
                 <li class="page-item first btn">
                    <a class="btn page-link disabled" href="{{ posts.pagination.pages|first.link }}">First</a>
                </li>
            {% endif %}

            {# Previous #}
            {% if posts.pagination.prev %}
                <li class="page-item prev btn">
                    <a class="page-link" href="{{ posts.pagination.prev.link }}">Previous</a>
                </li>
            {% else %}
                <li class="page-item first btn">
                    <a class="btn disabled page-link" href="{{ posts.pagination.prev.link }}">Previous</a>
                </li>
            {% endif %}

            {# Pages #}
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <li class="page-item btn">
                        <a class="page-link" href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li class="page-item current btn">
                        <a class="btn disabled page-link" href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            {# Next #}
            {% if posts.pagination.next %}
                <li class="page-item next btn">
                    <a class="page-link" href="{{ posts.pagination.next.link }}">Next</a>
                </li>
            {% else %}
                <li class="page-item next btn disabled">
                    <a class="btn disabled page-link" href="{{ posts.pagination.next.link }}">Next</a>
                </li>
            {% endif %}

            {# Last #}
            {% if posts.pagination.pages|last and posts.pagination.pages|last.current != true %}
                <li class="page-item last btn">
                    <a class="btn page-link" href="{{ posts.pagination.pages|last.link }}">Last</a>
                </li>
            {% else %}
                <li class="page-item last btn disabled">
                    <a class="btn disabled page-link" href="{{ posts.pagination.pages|last.link }}">Last</a>
                </li>
            {% endif %}

        </ul>
    </nav>
{% endif %}
