{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}  

	<body class="{{body_class}}" data-template="base.twig">
		{{ function ( 'wp_body_open' ) }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>

		<header id="header" class="site-header" rel="header.php">
			<nav class="navbar navbar-expand-lg bg-altlight navbar-light py-2 ">
				<div class="container">
					<a href="{{function('site_url')}}" class="navbar-brand">{{function('bloginfo','name')}}</a>

					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
						<span class="navbar-toggler-icon"></span>
					</button>
				
					<div class="collapse navbar-collapse" id="navmenu">
						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<a href="#whatwedo" class="nav-link">What we do</a>
							</li>
							<li class="nav-item">
								<a href="#ourprocess" class="nav-link">Our Process</a>
							</li>
							<li class="nav-item">
								<a href="#ourprojects" class="nav-link">Our Projects</a>
							</li>
							<li class="nav-item">
								<a href="#contact" class="nav-link">Contact Us</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>

		<main id="main" class="site-main" rel="index-php">
			<div class="container my-3">
				<div class="d-sm-flex">
				{% if title %}<h1>{{title}}</h1>{% endif %}
				{% block content %}
					Sorry, no content
				{% endblock %}
				</div>
				{{function( 'get_sidebar' )}}
			</div>
		</main><!-- #main -->

		{% block footer %}
			<footer id="footer" class="p-2 bg-altlight text-dark text-center position-relative" rel="footer.php">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
