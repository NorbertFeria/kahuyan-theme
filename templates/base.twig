{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}  

	<body class="{{body_class}}" data-template="base.twig">
		{{ function ( 'wp_body_open' ) }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>

		<header id="header" class="site-header" rel="header.php">
			<nav class="navbar navbar-expand-lg bg-altlight navbar-light py-2 ">
				<div class="container">
					<a href="{{function('site_url')}}" class="navbar-brand">
						{% if custom_logo %}
							<img src="{{custom_logo}}" >
						{%else%}
							{{bloginfo_name}}
						{%endif%}
					</a>
					{{bloginfo_description}}


					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
						<span class="navbar-toggler-icon"></span>
					</button>
				
					<div class="collapse navbar-collapse" id="navmenu">
						{{primary_nav}}
					</div>

				</div>
			</nav>
		</header>

		<main id="main" class="site-main" rel="index-php">
			<div class="container my-3">
				<div class="row">
				{% if title %}<h1>{{title}}</h1>{% endif %}
				{% block content %}
					Sorry, no content
				{% endblock %}
				</div>
				{% if is_active_sidebar %}
					{{function( 'get_sidebar' )}}
				{% endif %}
			</div>
		</main><!-- #main -->

		{% if wp_debug %}
			{% include "partial/debug.twig" %}
		{%endif %}

		{% block footer %}
			<footer id="footer" class="p-2 bg-altlight text-dark text-center position-relative" rel="footer.php">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
