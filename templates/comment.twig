<div class="card m-3" id="blog-comment-{{comment.ID}}">
	<div class="card-body">
			<h5 class="comment-author">{{comment.author.name}} says</h5>
			<div class="comment-content">{{comment.comment_content|wpautop}}</div>

			<section class="comment-box">
				
				<!-- comment form -->
				{% include "comment-form.twig" %}

				<!-- child comments -->
				{% if comment.children %}
					<h4> replies </h4>
					<div class="mb-3 ml-5" id="blog-comment-{{comment.ID}}">
						<div class="comments">
							{% for cmt in comment.children %}
								{% include "comment.twig" with {comment:cmt} %}
							{% endfor %}
						</div>
					</div>
				{% endif %}

			</section>
	</div>
</div>